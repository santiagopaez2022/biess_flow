package ec.gov.iess.creditos.pq.util;

import java.util.ArrayList;
import java.util.List;

public class PrecalificacionUtil {

	/**
	 * Obtiene los estados para cuenta bancaria
	 * 
	 * @return
	 */
	public static List<String> obtenerEstadosCuentaBancaria() {
		List<String> estados = new ArrayList<String>();
		estados.add(EstadosCredito.ESTADO_PQ_CANCELADO);
		estados.add(EstadosCredito.ESTADO_PQ_ANULADO_RECHAZADO);
		return estados;
	}

	/**
	 * Obtiene estados de historia laboral
	 * 
	 * @return
	 */
	public static List<String> obtenerEstadosHl() {
		List<String> estados = new ArrayList<String>();
		estados.add(EstadosCredito.ESTADO_PQ_VIGENTE);
		return estados;
	}

	/**
	 * Obtiene estados de historia laboral de PH
	 * 
	 * @return
	 */
	public static List<String> obtenerEstadosHlPH() {
		List<String> estados = new ArrayList<String>();
		estados.add(EstadosCredito.ESTADO_VIGENTE);
		return estados;
	}

	/**
	 * @return
	 */
	public static List<String> obtenerEstadosSolicitudPH() {
		List<String> estados = new ArrayList<String>();
		estados.add(EstadosCredito.ESTADO_CREDITO_PH_APROBADO);
		estados.add(EstadosCredito.ESTADO_CREDITO_PH_SOLICITADO);
		return estados;
	}

	/**
	 * @return
	 */
	public static List<Long> obtenerTiposSolicitudPH() {
		List<Long> tipos = new ArrayList<Long>();
		tipos.add(TiposCreditoPh.PH_VIVIENDA_TERMINADA_IND);
		tipos.add(TiposCreditoPh.PH_VIVIENDA_TERMINADA_SOL);
		tipos.add(TiposCreditoPh.PH_CONSTRUCCION_IND);
		tipos.add(TiposCreditoPh.PH_CONSTRUCCION_SOL);
		tipos.add(TiposCreditoPh.PH_AMPLIACION_IND);
		tipos.add(TiposCreditoPh.PH_AMPLIACION_SOL);
		tipos.add(TiposCreditoPh.PH_SUSTITUCION_HIPOTECA_IND);
		tipos.add(TiposCreditoPh.PH_SUSTITUCION_HIPOTECA_SOL);
		tipos.add(TiposCreditoPh.PH_SUSTITUCION_HIPOTECA_IESS_IND);
		tipos.add(TiposCreditoPh.PH_SUSTITUCION_HIPOTECA_IESS_SOL);
		return tipos;
	}

	/**
	 * @return
	 */
	public static List<String> obtenerTiposCargos() {
		List<String> tipos = new ArrayList<String>();
		tipos.add(TiposCredito.TIPO_CARGO_PRO);
		tipos.add(TiposCredito.TIPO_CARGO_REG);
		return tipos;
	}

	/**
	 * @return
	 */
	public static List<String> obtenerEstadosSolicitud() {
		List<String> estados = new ArrayList<String>();
		estados.add(EstadosCredito.ESTADO_FONDOS_AFP);
		estados.add(EstadosCredito.ESTADO_FONDOS_AFT);
		estados.add(EstadosCredito.ESTADO_FONDOS_ANE);
		estados.add(EstadosCredito.ESTADO_FONDOS_GUI);
		estados.add(EstadosCredito.ESTADO_FONDOS_REG);
		estados.add(EstadosCredito.ESTADO_FONDOS_TRA);
		return estados;
	}
	
}
