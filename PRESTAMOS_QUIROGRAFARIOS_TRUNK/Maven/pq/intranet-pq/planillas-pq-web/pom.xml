        </dependency>
        <dependency>
            <groupId>ec.fin.biess</groupId>
            <artifactId>cuenta-bancaria-ejb</artifactId>
            <scope>provided</scope>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>ec.fin.biess</groupId>
            <artifactId>historia-laboral-ejb</artifactId>
            <scope>provided</scope>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>ec.fin.biess</groupId>
            <artifactId>planillas-pq-ejb</artifactId>
            <scope>provided</scope>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>ec.fin.biess</groupId>
            <artifactId>planillas-pq-core-ejb</artifactId>
            <scope>provided</scope>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>net.sf.jasperreports</groupId>
            <artifactId>jasperreports</artifactId>
